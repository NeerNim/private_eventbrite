<h1>All Events</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 style="text-align:left" class="text-success">Upcoming Events:</h2>
    <% @upcoming.each do |event| %>
      <h3>
        <%= event.date %>
        <%= event.time %>
        <%= event.title %>
      </h3>
      <hr>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 style="text-align:left" class="text-danger">Past Events:</h2>
    <% @past.each do |event| %>
      <h3>
        <%= event.date %>
        <%= event.time %>
        <%= event.title %>
      </h3>
      <hr>
    <% end %>
  </div>
</div>
